        android:textColor="@color/black"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/txtSeguridadDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtConsentimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/txtConsentimientoDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black" />

</LinearLayout>